{
	"name": "wordsgain",
	"version": "1.0.0",
	"private": true,
	"description": "Make Your Vocabulary Great Again!",
	"author": "the WordsGain team",
	"homepage": "http://wordsgain.com/",
	"license": "GPL-3.0-or-later",
	"main": "build/index.js",
	"devDependencies": {
		"@wordpress/scripts": "^7.1.0",
		"autoprefixer": "^9.7.4",
		"chokidar-cli": "^2.1.0",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^7.1.0"
	},
	"scripts": {
		"build:playground-style": "node-sass src/blocks/playground/style.scss build/playground/style.css --output-style expanded && postcss -r build/playground/style.css",
		"build:playground-script": "wp-scripts build src/blocks/playground/index.js src/blocks/playground/frontend.js --output-path=build/playground/",
		"start:playground-style": "chokidar \"src/**/*.scss\" -c \"npm run build:playground-style\" --initial",
		"start:playground-script": "wp-scripts start src/blocks/playground/index.js src/blocks/playground/frontend.js --output-path=build/playground/",
		"start:playground": "run-p \"start:playground-*\"",
		"build:playground": "run-p \"build:playground-*\""
	}
}
